PORT=8080
GIN_MODE=release

# PostgreSQL
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=freelance_monitor
DB_PORT=5432
DB_SSLMODE=disable

# Auth
JWT_SECRET=change-me
JWT_TTL_SECONDS=3600
AUTH_COOKIE=false
DEV_EXPOSE_RESET_TOKEN=false
DEV_ALLOW_UNAUTH=false

# Password reset link base (used to compose the URL in emails)
# Example: http://localhost:3000/auth/reset?token=
RESET_LINK_BASE=

# SMTP (optional for password reset emails)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Offer reminder configuration (optional)
# REMINDER_OFFER_WITHIN_DAYS=7

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_DEV_ALLOW_UNAUTH=false
